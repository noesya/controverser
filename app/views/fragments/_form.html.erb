
<%= simple_form_for [@controversy, @fragment] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-lg-4">
      <%= f.input :title %>
      <%= f.input :url, as: :string %>
      <%= f.input :source, as: :string %>
      <%= f.input :image, as: :string %>
    </div>
    <div class="col-lg-4">
      <%= f.input :summary_short, input_html: { rows: 5 } %>
      <%= f.input :summary_long, input_html: { rows: 10 } %>
      <%= f.input :full_text %>
    </div>
    <div class="col-lg-4">
      <%= f.association :concepts, 
                        collection: @controversy.concepts.ordered, 
                        as: :check_boxes %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Enregistrer', class: button_classes %>
  </div>
<% end %>
